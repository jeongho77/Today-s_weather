<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="@drawable/morning_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m_Weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Sunny"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/m_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="92dp"
            android:gravity="center"
            android:text="울산"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/m_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_area"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="30°"
            android:textColor="@color/white"
            android:textSize="70sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#80FFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="2dp"
        android:layout_marginTop="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/day_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:paddingTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/maxtemp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:text="18°"
                    android:textColor="@color/red"
                    android:paddingTop="10dp"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/mintemp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:textSize="30sp"
                    android:text="18°"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/blue"/>

                <ImageView
                    android:id="@+id/weather_1"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/pink_cloudy"
                    android:gravity="end"
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/maxtemp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:textColor="@color/red"
                    android:paddingTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="18°"/>

                <TextView
                    android:id="@+id/mintemp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:textSize="30sp"
                    android:text="18°"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/blue"
                    />

                <ImageView
                    android:id="@+id/weather_2"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/pink_mooncloudy"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal"
               >
                <TextView
                    android:id="@+id/maxtemp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:paddingTop="10dp"
                    android:textColor="@color/red"
                    android:text="18°"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/mintemp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="10dp"
                    android:gravity="end"
                    android:layout_marginRight="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/blue"
                    android:text="18°"/>

                <ImageView
                    android:id="@+id/weather_3"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/pink_sun"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maxtemp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="10dp"
                    android:gravity="end"
                    android:text="18°"
                    android:textColor="@color/red"
                    android:textSize="30sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/mintemp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:text="18°"
                    android:textColor="@color/blue"
                    android:textSize="30sp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/weather_4"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/pink_rain"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/day_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maxtemp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:paddingTop="5dp"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mintemp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:paddingTop="5dp"
                    android:textColor="@color/blue"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/weather_5"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>