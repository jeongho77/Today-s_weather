                <TextView
                    android:id="@+id/maxtemp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:text="18°"/>

                <TextView
                    android:id="@+id/mintemp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:text="18°"/>

                <ImageView
                    android:id="@+id/weather_3"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/blur_ic"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:background="@color/black">
                <TextView
                    android:id="@+id/maxtemp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:text="18°"/>

                <TextView
                    android:id="@+id/mintemp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:text="18°"/>

                <ImageView
                    android:id="@+id/weather_4"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/blur_ic"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:background="@color/black">
                <TextView
                    android:id="@+id/maxtemp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:text="18°"/>
                <TextView
                    android:id="@+id/mintemp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:text="18°"/>

                <ImageView
                    android:id="@+id/weather_5"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/blur_ic"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>